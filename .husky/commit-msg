#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validate commit message follows conventional commits
commit_msg=$(cat "$1")

# Pattern for conventional commits
pattern="^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert|security)(\(.+\))?: .{1,100}$"

if ! echo "$commit_msg" | grep -qE "$pattern"; then
  echo "❌ Invalid commit message format!"
  echo ""
  echo "Expected format: <type>(<scope>): <description>"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, perf, test, build, ci, chore, revert, security"
  echo ""
  echo "Examples:"
  echo "  feat(auth): add two-factor authentication"
  echo "  fix(dashboard): resolve chart rendering issue"
  echo "  security(api): add input validation"
  echo ""
  exit 1
fi

echo "✅ Commit message validated"
